	"version": "0.2.0",
	"configurations": [
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug executable 'doit'",
			"cargo": {
				"args": [
					"build",
					"--bin=doit",
					"--package=doit"
				],
				"filter": {
					"name": "doit",
					"kind": "bin"
				}
			},
			"args": ["--tokens","-f"],
			"cwd": "${workspaceFolder}"
		}
	]
}